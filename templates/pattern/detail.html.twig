{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Détail du patron
{% endblock %}

{% block body %}
<div class="card mt-2 mb-2 w-50 m-auto">
    <div class="card-body">
        <h5 class="card-title">Nom du Patron : {{ pattern.title }}</h5>
        <p class="pattern-credit">Creatrice.teur. : {{ pattern.author }}</p>
        <p>Date de réalisation : {{ pattern.dateProduced|date('d-m-Y') }}</p>
        <p class="card-text">Commentaire : {{ pattern.commentary|nl2br }}</p>
        {# le filtre nl2br convertit les sauts de ligne du texte en balises <br> #}
    </div>

    <div class="card-body">
        <a href="{{ path('pattern_delete', {'id': pattern.id, 'token': csrf_token
            ('delete'~pattern.id)}) }}"
           class="btn btn-danger mt-2"
           title="Supprimer ce patron">
            Supprimer
        </a>
        <a href="{{ path('pattern_update', {'id': pattern.id}) }}"
           class="btn btn-secondary mt-2"
           title="Modifier ce patron">
            Modifier
        </a>
    </div>
</div>
{% endblock %}