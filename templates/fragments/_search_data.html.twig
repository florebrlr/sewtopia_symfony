<div class="filters-container">
    <h2>Filtres</h2>
    {{ form_start(form) }}
    <div class="filters-form">
        <div class="filter-group">
            {{ form_row(form.searchByName) }}
        </div>
        <div class="filter-group">
            {{ form_row(form.category) }}
        </div>
        <div class="filter-group">
            {{ form_row(form.author) }}
        </div>
        <div class="filter-group">
            {{ form_row(form.isRealized) }}
        </div>
        <div class="filter-group">
            {{ form_row(form.isPrinted) }}
        </div>
        <div class="filter-group">
            {{ form_row(form.dateRealized) }}
        </div>
        <div class="filter-buttons">
            <button type="submit" class="btn-filter">Rechercher</button>
            <a href="{{ path(app.request.attributes.get('_route')) }}" class="btn-reset">RÃ©initialiser</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>
