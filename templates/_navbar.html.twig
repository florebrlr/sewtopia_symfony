<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page avec Sidebar à Droite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<div class="container-fluid d-flex">
    <!-- Sidebar à droite -->
    <div class="sidebar">
        <ul class="nav flex-column mb-2">
            <li class="img-fluid text-center">
                <a class="nav-link" href="{{ path('main_home') }}" title="Retour à la page d'accueil">
                    <img src="{{ asset('img/logo_sewtopia.png') }}" alt="Sewtopia Logo">
                </a>
            </li>
            <!-- Se connecter / S'identifier -->
            <div class="connexion-navbar">
                {% if app.user %}
                    <li class="nav-item text-center" id="hi-username">Salut
                        <span id="username"> {{ app.user.username }}</span> !
                        <a class="btn btn-primary" href="{{ path('app_logout') }}" title="Se déconnecter">
                            Se déconnecter</a>
                    </li>
                {% else %}
                    <li class="nav-item text-center" >
                        <a class="btn btn-primary" href="{{ path('app_register') }}"
                           title="S'enregistrer">S'enregistrer</a>
                    </li>
                    <li class="nav-item text-center">
                        <a class="btn btn-primary" href="{{ path('app_login') }}" title="Se connecter">Se connecter</a>
                    </li>
                {% endif %}
            </div>

            <div class="menu-navbar">
                {% if app.user %}
                    <li class="nav-item d-flex align-items-center">
                        {#                        <i class="bi bi-stars"></i> #}
                        <img src="{{ asset('/img/chevron-left.svg') }}" alt="chevron left" class="mr-2">
                        <a class="nav-link" href="{{ path('pattern_list') }}" title="Voir tous mes patrons">Mes patrons</a>
                        <img src="{{ asset ('/img/stars.svg') }}" alt="stars" class="ml-2">
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <img src="{{ asset('/img/chevron-left.svg') }}" alt="chevron left" class="mr-2">
                        <a class="nav-link" href="{{ path('pattern_create') }}" title="Ajouter un patron">Ajouter un patron</a>
                        <img src="{{ asset ('/img/stars.svg') }}" alt="stars" class="ml-2">
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <img src="{{ asset('/img/chevron-left.svg') }}" alt="chevron left" class="mr-2">
                        <a class="nav-link" href="{{ path('pattern_favorites_list') }}" title="Patrons favoris">Mes patron favoris</a>
                        <img src="{{ asset ('/img/stars.svg') }}" alt="stars" class="ml-2">
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <img src="{{ asset('/img/chevron-left.svg') }}" alt="chevron left" class="mr-2">
                        <a class="nav-link" href="{{ path('main_calculator') }}" title="Calculateur de jupe cercle">Calculateur de jupe cercle</a>
                        <img src="{{ asset ('/img/stars.svg') }}" alt="stars" class="ml-2">
                    </li>
                {% endif %}

                <li class="nav-item d-flex align-items-center">
                    <img src="{{ asset('/img/chevron-left.svg') }}" alt="chevron left">
                    <a class="nav-link" href="{{ path('main_about_me') }}" title="A propos de moi">A propos de moi</a>
                    <img src="{{ asset ('/img/stars.svg') }}" alt="stars" class="ml-2">
                </li>
            </div>

        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
